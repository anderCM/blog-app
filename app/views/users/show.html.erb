<div class="container my-3">
  <%= render partial: 'shared/user', locals: { user: @user } %>
  <%= render partial: 'shared/bio', locals: { user: @user } %>

  <% @posts.each do |post| %>
    <%= render partial: 'shared/post', locals: { post: post } %>
  <% end %>
  <div class="d-flex justify-content-center my-3">
  <a class="btn btn-outline-light w-25" type="button" href="<%= user_posts_path(@user) %>">See all posts</a>
  </div>
</div>