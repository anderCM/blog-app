<ul class="container">
<% @users.each do |user| %>
<li class="row border border-dark rounded bg-light shadow p-4 my-3">
  <div class="col-3">
    <img class="w-50 h-80" src="<%= user.photo =%>" />
  </div>
  <div class="col-9 position-relative">
    <h3><%= user.name =%></h3>
    <a class="position-absolute bottom-0 end-0 text-decoration-none" href="<%= user_path(user) =%>" role="button">Number of posts: <%= user.post_counter =%></a>
  </div>
</li>
<% end %>
</ul>