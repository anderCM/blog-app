<div class="container my-3">
  <%= render partial: 'shared/user', locals: { user: @user } %>
  <%= render partial: 'shared/bio', locals: { user: @user } %>

  <% @posts.each do |post| %>
    <%= render partial: 'shared/post', locals: { post: post } %>
    <%= render partial: 'shared/comments', locals: { post: post } %>
  <% end %>
  <div class="d-flex justify-content-center my-3">
    <button class="btn btn-outline-light w-25" type="button">Pagination</button>
  </div>
</div>